# T-Trade Backend Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Application
APP_NAME="T-Trade"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=t_trade
DB_USERNAME=postgres
DB_PASSWORD=secret_change_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_in_production

# Queue & Cache
QUEUE_CONNECTION=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Octane Server
OCTANE_SERVER=swoole

# Payment Gateways - SANDBOX KEYS
# Get from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_PAYMENT_URL=https://api.paystack.co
PAYSTACK_MERCHANT_EMAIL=your-email@example.com

# Stripe - SANDBOX KEYS
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Email (SendGrid)
# Get API key from: https://app.sendgrid.com/settings/api_keys
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxx
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@t-trade.com
MAIL_FROM_NAME="${APP_NAME}"

# SMS (Twilio or Termii)
# Twilio: https://console.twilio.com/
TWILIO_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+234xxxxxxxxxx

# Alternative: Termii (Nigeria-focused)
# TERMII_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
# TERMII_SENDER_ID=T-Trade

# AWS S3 (File Storage)
# Create bucket: https://s3.console.aws.amazon.com/
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=t-trade-dev
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT Authentication
JWT_SECRET=your-secret-key-here-generate-with-php-artisan-jwt-secret
JWT_TTL=30  # Token lifetime in minutes

# KYC/AML Verification Services
# Smile ID: https://usesmileid.com/
SMILE_ID_PARTNER_ID=xxxxxxxxxx
SMILE_ID_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
SMILE_ID_CALLBACK_URL=${APP_URL}/api/webhooks/smile-id

# NIN/BVN Verification (Nigeria)
# NIBSS or alternative provider
NIBSS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
NIBSS_API_URL=https://api.nibss-plc.com.ng

# Google Maps (for Express delivery)
# Get key: https://console.cloud.google.com/google/maps-apis/
GOOGLE_MAPS_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxx

# Push Notifications (Firebase)
# Get config: https://console.firebase.google.com/
FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
FCM_SERVER_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx

# NAFDAC API (Food Safety Verification)
# Contact NAFDAC for API access
NAFDAC_API_URL=https://api.nafdac.gov.ng
NAFDAC_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
NAFDAC_TIMEOUT=30  # seconds

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60

# Transaction Limits (Tier 1)
TIER_1_PER_TRANSACTION=100000
TIER_1_DAILY=200000
TIER_1_MONTHLY=500000

# Transaction Limits (Tier 2)
TIER_2_PER_TRANSACTION=500000
TIER_2_DAILY=2000000
TIER_2_MONTHLY=20000000

# Escrow Configuration
ESCROW_FEE_PERCENTAGE=1.5  # 1.5% escrow fee
INSPECTION_WINDOW_DOMESTIC=24  # hours
INSPECTION_WINDOW_INTERNATIONAL=72  # hours
INSPECTION_WINDOW_EXPRESS=0.25  # 15 minutes (0.25 hours)

# Rider Configuration
RIDER_BASE_COMMISSION=500  # Base fee in NGN
RIDER_DISTANCE_BONUS_PER_KM=50
RIDER_PEAK_HOUR_PREMIUM=20
RIDER_LATE_DELIVERY_PENALTY=100

# Monitoring (Optional - for production)
# SENTRY_LARAVEL_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxx
# NEW_RELIC_LICENSE_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx
# DATADOG_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Development Tools
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true

# KYC Verification
KYC_NIN_PROVIDER=dojah
KYC_BVN_PROVIDER=dojah
DOJAH_API_KEY=your_dojah_api_key_here
DOJAH_APP_ID=your_dojah_app_id_here
DOJAH_PUBLIC_KEY=your_dojah_public_key_here
DOJAH_BASE_URL=https://api.dojah.io

# Alternative providers (if needed)
# YOUVERIFY_API_KEY=
# PREMBLY_API_KEY=
# PREMBLY_APP_ID=
